[Unit]
Description=Mailbox Synchronization Service

[Service]
Type=oneshot
Environment="PASSWORD_STORE_DIR=%h/.local/share/pass"
Environment="DISPLAY=:0"
ExecStart=/usr/bin/mbsync -V -c %h/.config/isync/mbsyncrc -a
ExecStartPost=/usr/bin/bash -c '/usr/bin/dunstify -u normal "$$(/usr/bin/date +"%%H:%%M" ) â€” Syncing mail" "Received $(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null) new mails"'

[Install]
WantedBy=default.target