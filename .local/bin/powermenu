#!/usr/bin/env bash

chosen=$(/usr/bin/printf "  Power Off\n  Restart\n  Suspend\n  Hibernate\n  Log Out\n  Lock" | /usr/bin/rofi -config emoji.rasi -dmenu -i -theme-str '@import "power.rasi"' -p "⏼")

case "$chosen" in
	"  Power Off") poweroff ;;
	"  Restart") reboot ;;
	"  Suspend") systemctl suspend-then-hibernate ;;
	# "  Hibernate") systemctl hibernate ;;
	# "  Log Out") bspc quit ;;
	"  Lock") /usr/bin/slock ;;
	*) exit 1 ;;
esac
